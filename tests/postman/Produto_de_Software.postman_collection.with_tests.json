            },
            "url": {
              "raw": "{{base_url}}/api/token/",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "token",
                ""
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Login OK (200)\", function () {",
                  "  pm.response.to.have.status(200);",
                  "});",
                  "pm.test(\"Retorna tokens\", function () {",
                  "  var json = pm.response.json();",
                  "  pm.expect(json).to.have.keys(\"access\", \"refresh\");",
                  "  pm.environment.set(\"auth_token\", json.access);",
                  "});"
                ]
              }
            },
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Status 200', function () { pm.response.to.have.status(200); });",
                  "let json;",
                  "pm.test('JSON com access', function () {",
                  "  json = pm.response.json();",
                  "  pm.expect(json).to.have.property('access');",
                  "});",
                  "// Salva token no ambiente",
                  "pm.environment.set('auth_token', json.access);"
                ]
              }
            }
          ]
        }
      ]
